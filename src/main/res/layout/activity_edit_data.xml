<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".EditData"
    android:background="#000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/editAdView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-1669182856365767/2787857740">
            android:layout_gravity="center"
        </com.google.android.gms.ads.AdView>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/EpersonName"
        android:hint="الأسم"
        android:inputType="text"
        android:gravity="center"
        android:textSize="34sp"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="تاريخ الميلاد "
        android:gravity="center"
        android:textSize="34sp"
        android:id="@+id/EbirthDay"
        android:textColor="#fff"
        android:layout_gravity="center"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="السن"
        android:gravity="center"
        android:textSize="34sp"
        android:id="@+id/Eage"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_gravity="center"
        android:inputType="number"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="المرحلة الكنسية"
        android:gravity="center"
        android:textSize="34sp"
        android:id="@+id/ECharchLevel"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_gravity="center"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="المرحلة الدراسية"
        android:gravity="center"
        android:textSize="34sp"
        android:id="@+id/ESchoolLevel"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_gravity="center"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="أب الأعتراف"
        android:gravity="center"
        android:textSize="34sp"
        android:id="@+id/Efather"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_gravity="center"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="الخادم"
        android:gravity="center"
        android:textSize="34sp"
        android:id="@+id/Eservice"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_gravity="center"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="رئيس الخدمة"
        android:gravity="center"
        android:textSize="34sp"
        android:id="@+id/EFservice"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_gravity="center"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="النوع"
            android:textColor="#fff"
            android:textSize="34sp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Radiogroup"
            android:layout_gravity="center"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/male"
                android:text="ذكر"
                android:textColor="#fff"

                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/female"
                android:text="أنثي"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                />
        </RadioGroup>

        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:text="حفظ"
            android:textSize="25sp"
            android:background="@drawable/button"
            android:id="@+id/saveData"
            />
</LinearLayout>
</ScrollView>